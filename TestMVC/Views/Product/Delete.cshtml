@model Product

<h1 class="alert alert-danger">Are you sure you want to delete this?</h1>


<dl class="row">
    <dt class="col-2">Id</dt>
    <dd class="col-10">@Model.Id</dd>
    <dt class="col-2">Name</dt>
    <dd class="col-10">@Model.Name</dd>
    <dt class="col-2">Description</dt>
    <dd class="col-10">@Model.Description</dd>
    <dt class="col-2">Price</dt>
    <dd class="col-10">@Model.Price</dd>
    <dt class="col-2">Image</dt>
    <dd class="col-10">@Model.Image</dd>
    <dt class="col-2">CatId</dt>
    <dd class="col-10">@Model.CatId</dd>
</dl>
<form method="post" asp-controller="Product" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-controller="Product" asp-action="ShowAll">Back To List</a>