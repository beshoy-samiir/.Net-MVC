@model Category

<h1 class="alert alert-danger">Are you sure you want to delete this?</h1>


<dl class="row">
    <dt class="col-2">Id</dt>
    <dd class="col-10">@Model.Id</dd>
    <dt class="col-2">Name</dt>
    <dd class="col-10">@Model.Name</dd>
</dl>
<form method="post" asp-controller="Category" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-controller="Category" asp-action="Index">Back To List</a>